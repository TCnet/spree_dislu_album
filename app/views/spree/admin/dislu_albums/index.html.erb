<% content_for :page_title do %>
   <%= plural_resource_name(Spree::DisluAlbum) %>
<% end %>



<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_dislu_album), new_admin_dislu_album_url, { class: "btn-success", icon: 'add', id: 'admin_new_dislu_album' } %>

<% end if can?(:create, Spree::DisluAlbum) %>
<div class="row">
  <table class="table" id="listing_dislu_imports">
    <thead>
      <tr data-hook="admin_dislu_imports_index_headers">
        <th><%= Spree.t(:image) %></th>
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:date) %></th>
        <th data-hook="admin_dislu_imports_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
  
    <% @albums.each do |f|%>
    <tr>
      <td><%= f.name %></td>
    <td><%= f.name %></td>
    <td><%= f.created_at %></td>
     <td class="actions actions-1 text-right" data-hook="admin_dislu_albums_index_row_actions">
         <%= link_to_edit f, no_text: true if can?(:edit, f)  %>
              <%= link_to_delete f, no_text: true if can?(:delete, f)  %>
            </td>
  </tr>
    <%end%>
        </tbody>
    </table>
  
</div>



